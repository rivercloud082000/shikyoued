generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  DOCENTE
}

model User {
  id        String       @id @default(cuid())
  email     String?      @unique
  name      String?
  image     String?
  role      Role         @default(DOCENTE)
  isAllowed Boolean      @default(false)
  createdAt DateTime     @default(now())
  sessions  SessionDoc[]
  /// üîê Nuevo: hash de la contrase√±a (nunca guardes la clave plana)
  passwordHash String?
}

model Allowlist {
  email     String   @id
  role      Role     @default(DOCENTE)
  createdAt DateTime @default(now())
}

model SessionDoc {
  id        String   @id @default(cuid())
  userId    String
  dataJson  Json
  version   String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
