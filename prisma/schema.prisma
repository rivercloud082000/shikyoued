generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(cuid())
  name         String?
  email        String?      @unique
  image        String?
  role         Role         @default(DOCENTE)
  isAllowed    Boolean      @default(false)
  createdAt    DateTime     @default(now())
  /// üîê Nuevo: hash de la contrase√±a (nunca guardes la clave plana)
  passwordHash String?
  sessions     SessionDoc[]
}

model Allowlist {
  email     String   @id
  role      Role     @default(DOCENTE)
  createdAt DateTime @default(now())
}

model SessionDoc {
  id        String   @id @default(cuid())
  userId    String
  version   String
  dataJson  Json
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  DOCENTE
}
